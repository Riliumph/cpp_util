{
    "configurations": [
        // intellisense用設定
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/src/**",
                "/usr/include/**",
                "/usr/local/include/**"
            ],
            "defines": [
                "_DEBUG"
            ],
            "compilerPath": "/usr/bin/gcc",
            "compilerArgs": [
                "-Wall",
                "-Wextra",
                "-std=c++23"
            ],
            "cStandard": "c23",
            "cppStandard": "c++23",
            "intelliSenseMode": "linux-gcc-x64",
            "configurationProvider": "ms-vscode.makefile-tools",
            "browse": {
                // TagParser用設定
            }
        }
    ],
    "version": 4
}
